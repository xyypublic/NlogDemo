<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
 <targets>
	<target name="infoLog" xsi:type="File" 
	layout="${date:format=yyyy/MM/dd HH\:mm\:ss}  ${message}"
	fileName="../../../log/allLog.log" 				
	/>
	<target name="errorLog" xsi:type="File" 
	layout="${date:format=yyyy/MM/dd HH\:mm\:ss}  ${message}"
	fileName="../../../log/errorLog.log" 				
	/>
	<target name="debugLog" xsi:type="File" 
	layout="${date:format=yyyy/MM/dd HH\:mm\:ss}  ${message}"
	fileName="../../../log/debugLog.log" 				
	/>
</targets>
<rules>
	<logger name="info" level="Info" writeTo="infoLog" />
	<logger name="error" level="Error" writeTo="errorLog" />
	<logger name="*" minlevel="Debug" writeTo="debugLog" />
</rules>
</nlog>
